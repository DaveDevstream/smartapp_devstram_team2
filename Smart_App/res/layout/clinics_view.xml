<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="${relativePackage}.${activityClass}"
    android:orientation="vertical"
    android:background="@color/primary1"
    >
    
    <!--  Ideally set up the names of the clinics to be bolded in the code
    It's easy to do in code if the strings are separated out and concatenated when setting the value,
	just tag the title string as bold and then attach the rest on the end-->
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_box_height"
        
        android:padding="@dimen/padding_small"
        
        android:background="@color/primary3"
        android:orientation="horizontal"
        android:weightSum="1"
        >
    
        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.15"
		
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_small"
            android:background="@drawable/button_back"
            />
        
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.75"
            
            android:paddingTop="@dimen/padding_medium"
            android:gravity="center_horizontal"
	
            android:text="@string/view_clinics"
            android:textSize="@dimen/font_size"
            android:textColor="@color/primary5"
            />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.1"
	
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/ic_action_overflow"
            />
    
    </LinearLayout>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="@dimen/padding_medium"
        android:gravity="center"
        
        android:text="@string/select_domino_clinic"
        android:textSize="@dimen/font_size"
        android:textColor="@color/primary5"
        />
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/clinic_button_height"

        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@drawable/button"
        android:padding="@dimen/padding_small"
        
        android:text="@string/clinic_NMH_OPD_desc"
        android:textSize="@dimen/font_size"           
        android:textColor="@color/primary5"
        android:gravity="start"
        />
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/clinic_button_height"

        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@drawable/button"
        android:padding="@dimen/padding_small"

        android:text="@string/clinic_Leopardstown_desc"
        android:textSize="@dimen/font_size"           
        android:textColor="@color/primary5"
        android:gravity="start"
        />
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/clinic_button_height"

        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@drawable/button"
        android:padding="@dimen/padding_small"

        android:text="@string/clinic_DunLaoghaire"
        android:textSize="@dimen/font_size"           
        android:textColor="@color/primary5"
        android:gravity="start"
        />
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/clinic_button_height"

        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@drawable/button"
        android:padding="@dimen/padding_small"

        android:text="@string/clinic_Churchtown_desc"
        android:textSize="@dimen/font_size"           
        android:textColor="@color/primary5"
        android:gravity="start"
        />
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/clinic_button_height"

        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@drawable/button"
        android:padding="@dimen/padding_small"

        android:text="@string/clinic_NMH_desc"
        android:textSize="@dimen/font_size"           
        android:textColor="@color/primary5"
        android:gravity="start"
        />
    
        
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/clinic_button_height"

        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@drawable/button"
        android:padding="@dimen/padding_small"

        android:text="@string/clinic_Home_Visits_desc"
        android:textSize="@dimen/font_size"           
        android:textColor="@color/primary5"
        android:gravity="start"
        />
    
</LinearLayout>
</ScrollView>
