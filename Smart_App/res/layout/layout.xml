<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    android:orientation="vertical"
    android:padding="30dp" >
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/mlogo" />
    
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="@string/textsmart" />
        
        <TextView
	                 android:id="@+id/textView3"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="60dp"
	                 android:text="@string/textsecurematernity"
	                 android:textColor="@color/blue"
               />
             
        <TextView
                     android:id="@+id/textView4"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="40dp"
                     android:text="@string/textappointrec"
                     android:textColor="@color/blue"
                     />

    	<TextView
    	    android:id="@+id/textView5"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_marginBottom="10dp"
    	    android:layout_marginLeft="90dp"
    	    android:text="@string/main_text"
    	    android:textColor="@color/blue" />

    <EditText
        android:id="@+id/emailbutton"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/padding_medium"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_green"
        android:inputType="textEmailAddress"
        android:text="@string/username_button" 
        >

    </EditText>

    <EditText
        android:id="@+id/passwordbutton"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/padding_medium"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_green"
        android:inputType="textPassword"
        android:text="@string/password_button" />

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_login"
        android:text="@string/login_button" />
    
          <TextView
              android:id="@+id/textView6"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="45dp"
              android:layout_marginLeft="35dp"
              android:text="@string/textnmhireland"
              android:textColor="@color/black" />

          <Button
              android:id="@+id/button2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="0dp"
              android:layout_marginLeft="100dp"
              android:background="@color/white"
              android:gravity="center_vertical|center_horizontal|bottom|top"
              android:padding="0dp"
              android:password="false"
              android:singleLine="false"
              android:text="@string/textcredits"
              android:textColor="@color/blue" />

</LinearLayout>
