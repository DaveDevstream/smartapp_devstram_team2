<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary1" >
    
    <!-- Overall layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="${relativePackage}.${activityClass}"
    android:orientation="vertical"
    >

    
    <!-- Header Box -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_box_height"
        android:background="@color/primary3"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small"
        android:weightSum="1" >
    
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            
            android:paddingTop="@dimen/padding_medium"
            android:gravity="center_horizontal"
	
            android:text="@string/view_service_user"
            android:textSize="@dimen/font_size"
            android:textColor="@color/primary5"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_small"
            android:background="@drawable/button_back"
            android:drawableTop="@drawable/ic_action_overflow"
            android:gravity="center_horizontal"
            android:text="@string/edit_button"
            android:textColor="@color/primary1"
            android:textSize="@dimen/font_size"
            tools:ignore="RtlHardcoded" />
    
    </LinearLayout>
    
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center_horizontal"

        android:text="@string/placeholder_service_user_name"
        android:textSize="@dimen/font_size"
        android:textColor="@color/primary5"
        android:textStyle="bold"
        />

    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:layout_marginBottom="@dimen/margin_small"
        android:gravity="center_horizontal"
        
        android:text="@string/placeholder_service_user_details"
        android:textSize="@dimen/font_size"
        android:textColor="@color/primary5"
        />
    
    
    <!-- AnteNatal, Personal and PostNatal buttons -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="3"
        
        android:layout_marginBottom="@dimen/margin_small">
            
            <TextView
                android:layout_width="@dimen/stroke_small"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_medium"
                android:background="@color/primary5"
                tools:ignore="RtlHardcoded" />
            
            <Button
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:text="@string/info_antenatal"
                android:textColor="@color/primary5"
                android:textSize="@dimen/font_size_small"
                
                android:background="@drawable/button_blank"
                android:drawableTop="@drawable/ic_action_overflow"
                />
            
            <TextView 
                android:layout_height="match_parent"
                android:layout_width="@dimen/stroke_small"
                android:background="@color/primary5"
                />
            
            <Button
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:text="@string/info_personal"
                android:textColor="@color/primary5"
                android:textSize="@dimen/font_size_small"

                android:background="@drawable/button_blank"
                android:drawableTop="@drawable/ic_action_overflow"
                />
            
            <TextView 
                android:layout_height="match_parent"
                android:layout_width="@dimen/stroke_small"
                android:background="@color/primary5"
                />
                        
            <Button
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:text="@string/info_postnatal"
                android:textColor="@color/primary5"
                android:textSize="@dimen/font_size_small"

                android:background="@drawable/button_blank"
                android:drawableTop="@drawable/ic_action_overflow"
                />
            
            <TextView
                android:layout_width="@dimen/stroke_small"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_medium"
                android:background="@color/primary5"
                tools:ignore="RtlHardcoded" />
            
    </LinearLayout>
    
    <TextView 
        android:layout_height="@dimen/stroke_small"
        android:layout_width="match_parent"
        
        android:background="@color/primary5"
        
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        />
    

    <!-- Layout of info boxes -->
    
    <!-- Mother -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:padding="@dimen/padding_tiny"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="bottom"
        
        android:text="@string/mother"
        android:textColor="@color/primary5"
        android:textSize="@dimen/font_size"
        android:textStyle="bold"
        />
    
    
    <!-- Birth Mode -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:padding="@dimen/padding_small"
        
        android:background="@drawable/top_of_table"
        >
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            
            android:text="@string/birth_mode_ventose"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="left|center_vertical"
            />
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            
            android:text="@string/birth_mode"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="right|center_vertical"
            />
        
    </LinearLayout>

    <!-- Perineum -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="@dimen/margin_negative"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:padding="@dimen/padding_small"
        
        android:background="@drawable/element_of_table"
        >
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            
            android:text="@string/placeholder_perineum"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="left|center_vertical"
            />
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            
            android:text="@string/perineum"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="right|center_vertical"
            />
        
    </LinearLayout>
    
    <!-- Anti D -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="@dimen/margin_negative"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:padding="@dimen/padding_small"
        
        android:background="@drawable/element_of_table"
        >
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            
            android:text="@string/placeholder_antiD"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="left|center_vertical"
            />
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            
            android:text="@string/anti_D"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="right|center_vertical"
            />
        
    </LinearLayout>
    
    <!-- Midwives notes -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
      	android:layout_marginTop="@dimen/margin_negative"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:padding="@dimen/padding_small"
        
        android:background="@drawable/bottom_of_table"

        android:text="@string/midwife_notes"
        android:textSize="@dimen/font_size_small"
        android:textColor="@color/primary5"
        android:gravity="left|center_vertical"
       />
    
    <!-- Baby -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:padding="@dimen/padding_tiny"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="bottom"
        
        android:text="@string/baby"
        android:textColor="@color/primary5"
        android:textSize="@dimen/font_size" 
        android:textStyle="bold"
        />
    
    
    <!-- Date of Delivery -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:background="@drawable/top_of_table"
        android:padding="@dimen/padding_small" >
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            
            android:text="@string/placeholder_date"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="left|center_vertical"
            />
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            
            android:text="@string/date_of_delivery"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="right|center_vertical"
            />
        
    </LinearLayout>

    <!-- Time of Delivery -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="@dimen/margin_negative"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:padding="@dimen/padding_small"
        
        android:background="@drawable/element_of_table"
        >
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            
            android:text="@string/placeholder_time_of_delivery"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="left|center_vertical"
            />
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            
            android:text="@string/time_of_delivery"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="right|center_vertical"
            />
        
    </LinearLayout>
    
    <!-- Days since birth -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="@dimen/margin_negative"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:padding="@dimen/padding_small"
        
        android:background="@drawable/element_of_table"
        >
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            
            android:text="@string/placeholder_days_since_birth"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="left|center_vertical"
            />
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            
            android:text="@string/days_since_birth"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="right|center_vertical"
            />
        
    </LinearLayout>
    
    <!-- Sex of baby -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="@dimen/margin_negative"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:padding="@dimen/padding_small"
        
        android:background="@drawable/element_of_table"
        >
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            
            android:text="@string/male"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="left|center_vertical"
            />
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            
            android:text="@string/sex_of_baby"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="right|center_vertical"
            />
        
    </LinearLayout>
        
    <!-- Birth weight -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="@dimen/margin_negative"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:padding="@dimen/padding_small"
        
        android:background="@drawable/element_of_table"
        >
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            
            android:text="@string/placeholder_birth_weight"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="left|center_vertical"
            />
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            
            android:text="@string/birth_weight"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="right|center_vertical"
            />
        
    </LinearLayout>
        
    <!-- VitK -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="@dimen/margin_negative"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:padding="@dimen/padding_small"
        
        android:background="@drawable/element_of_table"
        >
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            
            android:text="@string/vitk_oral"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="left|center_vertical"
            />
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            
            android:text="@string/vitk"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="right|center_vertical"
            />
        
    </LinearLayout>
        
    <!-- Hearing -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="@dimen/margin_negative"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:padding="@dimen/padding_small"
        
        android:background="@drawable/element_of_table"
        >
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            
            android:text="@string/hearing_declined"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="left|center_vertical"
            />
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            
            android:text="@string/hearing"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="right|center_vertical"
            />
        
    </LinearLayout>
    
    <!-- Feeding -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="@dimen/margin_negative"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:padding="@dimen/padding_small"
        
        android:background="@drawable/element_of_table"
        >
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            
            android:text="@string/feeding_breast"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="left|center_vertical"
            />
    
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            
            android:text="@string/feeding"
            android:textSize="@dimen/font_size_small"           
            android:textColor="@color/primary5"
            android:gravity="right|center_vertical"
            />
        
    </LinearLayout>
    
    <!-- NBST -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
      	android:layout_marginTop="@dimen/margin_negative"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:padding="@dimen/padding_small"
        
        android:background="@drawable/bottom_of_table"
        >
        
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            
            android:text="@string/nbst"
            android:textSize="@dimen/font_size_small"
            android:textColor="@color/primary5"
            android:gravity="left|center_vertical"

            />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center_vertical|right"
            android:text="@string/nbst_done"
            android:textColor="@color/primary5"
            android:textSize="@dimen/font_size_small" />
        
    </LinearLayout>
    
    
</LinearLayout>
</ScrollView>
